@{

    Layout = "_Layout";
}

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col">İşlem</th>
    </tr>
  </thead>
  <tbody>

      @foreach (var item in @Model)
      {
      <tr>
          <th>@item.Id</th>
          <td>@item.Name</td>
          <td>@item.Price</td>
          <td>@item.Stock</td>
          <td>
              <a asp-action="Update" class="btn btn-sm btn-primary" asp-route-id="@item.Id">Update</a>
              <a asp-action="DeleteProduct" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Delete</a>
          </td>
    </tr> 
      }
    
  </tbody>
</table>
<a asp-action="AddProduct" class="btn btn-primary">Ürün Ekle</a>

