@model List<AppRole>
@{
    Layout = "_AdminLteLayout";
}
<div class="container shadow p-2">

<a asp-action="Create" asp-controller="Role" class="d-inline-block my-2">Yeni Role Ekle</a>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>CREATED TIME</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
         <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.CreatedTime</td>
            <td><a class="btn btn-danger" asp-action="DeleteRole" asp-route-roleId="@item.Id">Sil</a></td>
        </tr>
        }
        
    </tbody>
</table>

</div>