@model RoleAssignSendModel
@{
    Layout = "_AdminLteLayout";
}

<div class="container shadow w-50 p-4 bac">
    <h3>@Model.UserName</h3>

<form asp-action="AssignRole" asp-controller="User" method="post">

    <input type="hidden" asp-for="@Model.UserId" />

@for (int i=0; i<Model.Roles.Count;i++)
{
 <div class="form-check">
  <input type="hidden" asp-for="@Model.Roles[i].Name"/>
  <input type="hidden" asp-for="@Model.Roles[i].RoleId"/>
  <input class="form-check-input" asp-for="@Model.Roles[i].Exist" >
    @Model.Roles[i].Name
</div>
}
<div class="mb-3"> 
    <button type="submit" class="btn btn-primary">Kaydet</button>
</div>
<div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
</form>



</div>